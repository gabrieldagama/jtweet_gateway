{
  "name": "auth",
  "oauth_endpoints": {
    "token": {
      "preserve_host": false,
      "listen_path": "/auth/token",
      "upstreams": {
        "balancing": "roundrobin",
        "targets": [{ "target": "http://customermanagement:8081/users/login" }]
      },
      "strip_path": true,
      "append_path": false,
      "methods": ["POST"]
    }
  },
  "token_strategy": {
    "name": "jwt",
    "settings": [{ "alg": "HS256", "key": "jTweetSecret" }]
  }
}
