{
  "name": "tweets",
  "active": true,
  "proxy": {
    "preserve_host": false,
    "listen_path": "/tweets/*",
    "upstreams": {
      "balancing": "roundrobin",
      "targets": [{ "target": "http://tweetmanagement:8082/tweets" }]
    },
    "strip_path": false,
    "append_path": false,
    "methods": ["GET", "POST", "PUT", "DELETE"]
  },
  "plugins": [
    {
      "name": "oauth2",
      "enabled": true,
      "config": {
        "server_name": "auth"
      }
    },
    {
      "name":"cors",
      "enabled":true,
      "config":{
        "domains":["*"],
        "exposed_headers":[],
        "methods":[
           "POST",
           "GET",
           "PUT",
           "DELETE",
           "OPTIONS"
        ],
        "request_headers":[]
      }
    }   
  ]
}
